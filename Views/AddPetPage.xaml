<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_SPS.Views.AddPetPage"
             xmlns:viewmodels="clr-namespace:_SPS.ViewModels"
             Title="New Animal Registration">

    <ContentPage.BindingContext>
        <viewmodels:AddPetViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">

            <Label Text="Enter Protected Animal Information" FontSize="20" FontAttributes="Bold" />

            <Grid RowDefinitions="150, 150" ColumnDefinitions="*, *" ColumnSpacing="10" RowSpacing="10">

                <Frame Grid.Row="0" Grid.Column="0" Padding="0" IsClippedToBounds="True" BackgroundColor="#eee" CornerRadius="10">
                    <Grid>
                        <Image Source="{Binding PetImageSource1}" Aspect="AspectFill"/>
                        <Label Text="Front (AI Analysis)" VerticalOptions="Center" HorizontalOptions="Center" TextColor="Gray" InputTransparent="True"/>
                        <Button BackgroundColor="Transparent" Command="{Binding PickImageCommand}" CommandParameter="1"/>
                    </Grid>
                </Frame>

                <Frame Grid.Row="0" Grid.Column="1" Padding="0" IsClippedToBounds="True" BackgroundColor="#eee" CornerRadius="10">
                    <Grid>
                        <Image Source="{Binding PetImageSource2}" Aspect="AspectFill"/>
                        <Label Text="side" VerticalOptions="Center" HorizontalOptions="Center" TextColor="Gray" InputTransparent="True"/>
                        <Button BackgroundColor="Transparent" Command="{Binding PickImageCommand}" CommandParameter="2"/>
                    </Grid>
                </Frame>

                <Frame Grid.Row="1" Grid.Column="0" Padding="0" IsClippedToBounds="True" BackgroundColor="#eee" CornerRadius="10">
                    <Grid>
                        <Image Source="{Binding PetImageSource3}" Aspect="AspectFill"/>
                        <Label Text="free_1" VerticalOptions="Center" HorizontalOptions="Center" TextColor="Gray" InputTransparent="True"/>
                        <Button BackgroundColor="Transparent" Command="{Binding PickImageCommand}" CommandParameter="3"/>
                    </Grid>
                </Frame>

                <Frame Grid.Row="1" Grid.Column="1" Padding="0" IsClippedToBounds="True" BackgroundColor="#eee" CornerRadius="10">
                    <Grid>
                        <Image Source="{Binding PetImageSource4}" Aspect="AspectFill"/>
                        <Label Text="free_2" VerticalOptions="Center" HorizontalOptions="Center" TextColor="Gray" InputTransparent="True"/>
                        <Button BackgroundColor="Transparent" Command="{Binding PickImageCommand}" CommandParameter="4"/>
                    </Grid>
                </Frame>
            </Grid>

            <Entry Placeholder="Name (e.g., Poppie)" Text="{Binding Name}" />
            <Entry Placeholder="Breed (e.g., Maltese)" Text="{Binding Species}" />

            <Frame Padding="15,5" BorderColor="LightGray" CornerRadius="10" BackgroundColor="#F5F5F5" HasShadow="False">
                <Grid ColumnDefinitions="Auto, *">
                    <Label Grid.Column="0" 
                           Text="Gender" 
                           FontAttributes="Bold"
                           FontSize="16"
                           VerticalOptions="Center" 
                           TextColor="#333"
                           Margin="0,0,10,0"/>

                    <Picker Grid.Column="1" 
                            Title="Select" 
                            SelectedItem="{Binding Gender}"
                            TextColor="Black"
                            TitleColor="Gray"
                            HorizontalOptions="FillAndExpand">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Male</x:String>
                                <x:String>Female</x:String>
                                <x:String>Unknown</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </Grid>
            </Frame>
            
            <Frame Padding="15,5" BorderColor="LightGray" CornerRadius="10" BackgroundColor="#F5F5F5" HasShadow="False">
                <Grid ColumnDefinitions="Auto, *">
                    <Label Grid.Column="0" Text="Status" FontAttributes="Bold" FontSize="16" VerticalOptions="Center" TextColor="#333" Margin="0,0,10,0"/>
                    <Picker Grid.Column="1" SelectedItem="{Binding Status}" TextColor="Black" FontSize="16" HorizontalOptions="FillAndExpand">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Under Care</x:String>
                                <x:String>Missing</x:String>
                                <x:String>Adopted</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </Grid>
            </Frame>

            <Entry Placeholder="Age (e.g., 3 years old)" Text="{Binding Age}" Keyboard="Numeric"/>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Entry Grid.Column="0" Placeholder="몸무게 (kg)" Text="{Binding Weight}" Keyboard="Numeric"/>
                <Entry Grid.Column="1" Placeholder="상태 (예: 건강함)" Text="{Binding Condition}" />
            </Grid>

            <Entry Placeholder="Features (e.g., short tail)" Text="{Binding Feature}" />
            <Entry Placeholder="Contact information (e.g., 010-1234-5678)" Text="{Binding Contact}" Keyboard="Telephone"/>

            <Frame Padding="10" BackgroundColor="#F0F0F0" BorderColor="LightGray">
                <VerticalStackLayout Spacing="5">
                    <Label Text="{Binding Location, TargetNullValue='No location information'}" TextColor="Black"/>
                    <Button Text="Find My Location (GPS)" 
                            Command="{Binding GetCurrentLocationCommand}" 
                            BackgroundColor="#2196F3" 
                            HeightRequest="40"
                            FontSize="14"/>
                </VerticalStackLayout>
            </Frame>

            <Editor Placeholder="Additional explanation" 
                    Text="{Binding Description}" 
                    HeightRequest="80" 
                    AutoSize="TextChanges"/>

            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" Color="Blue"/>

            <Button Text="Register" 
                    Command="{Binding SavePetCommand}" 
                    BackgroundColor="#4CAF50" 
                    FontAttributes="Bold"
                    Margin="0,10,0,20"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>